{
    "dataset_reader": {
        "type": "simple_language_modeling",
        "end_tokens": [
            "</S>"
        ],
        "max_sequence_length": 200,
        "start_tokens": [
            "<S>"
        ],
        "token_indexers": {
            "tokens": {
                "type": "single_id"
            }
        },
        "tokenizer": {
            "type": "just_spaces"
        }
    },
    "model": {
        "type": "language_model",
        "bidirectional": true,
        "contextualizer": {
            "type": "identity_transformer",
            "hidden_dim": 512,
            "identity_attention": true,
            "input_dim": 432,
            "num_layers": 6
        },
        "dropout": 0.1,
        "sparse_embeddings": false,
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 432
                }
            }
        }
    },
    "train_data_path": "data/ptbdataset/ptb.train.txt",
    "validation_data_path": "data/ptbdataset/ptb.valid.txt",
    "trainer": {
        "device": 0,
        "learning_rate_scheduler": {
            "type": "noam",
            "model_size": 512,
            "warmup_steps": 6000
        },
        "num_epochs": 3,
        "optimizer": {
            "type": "dense_sparse_adam"
        }
    },
    "data_loader": {
        "batch_sampler": {
            "type": "bucket",
            "batch_size": 16
        },
        "max_instances_in_memory": 1600
    }
}